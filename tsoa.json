{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "jwt",
        "name": "token",
        "in": "header"
      }
    }
  },
  "routes": {
    "routesDir": "src/routes",
    "authenticationModule": "./src/middlewares/authTsoa.ts"
  }
}
